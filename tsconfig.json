{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Web Bluetooth + DOM support */
    "lib": ["DOM", "DOM.Iterable", "ES2020"],

    /* TypeScript behavior */
    "allowJs": true,
    "skipLibCheck": true,

    /* Relaxed strictness (keeping your preferences) */
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "strictNullChecks": false
  }
}
